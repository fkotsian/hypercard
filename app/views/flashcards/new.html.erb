<h1>Add a New Card</h1>

<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <form>
      <div class="form-group">
        <label>Question
          <input type="text" class="form-control" value="<%= @card.question %>" placeholder="Your question here">
        </label>
      </div>

      <div class="form-group">
        <label>Answer
          <input type="text" class="form-control" value="<%= @card.answer %>" placeholder="Your answer here">
        </label>
      </div>
      
      <input type="submit" class="btn btn-info" value="Create new flashcard">
    </form>
  </div>
</div>